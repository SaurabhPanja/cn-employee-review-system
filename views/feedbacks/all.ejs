<%- include('../partials/header') %>
  <h1 class="text-center">Reviews</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">reviewFor</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% reviews.forEach((review, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= review.for.username %></td>
        <td>
            <a class="btn btn-primary" href="/feedbacks/<%= review._id %>">Edit</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
<%- include("../partials/footer") %>
