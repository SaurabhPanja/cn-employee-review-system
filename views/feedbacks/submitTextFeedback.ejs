<%- include('../partials/header') %>
<form action="/feedbacks/<%= review._id %>/add" method="post" class="max-w-500 m-auto mt-5">
  <h1>Submit a feedback</h1>
  <div class="form-group mt-2">
    <label for="review-for" class="form-label">Feedback for</label>
    <input type="text" class="form-control" name="" id="" value="<%= review.for.name %>" disabled>
  </div>
  <div class="form-group mt-2" >
    <label for="text">Feedback</label>
    <textarea class="form-control" name="text"></textarea>
  </div>

  <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
<%- include("../partials/footer") %>
