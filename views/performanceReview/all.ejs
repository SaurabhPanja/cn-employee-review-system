<%- include('../partials/header') %>
  <h1 class="text-center">Reviews</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">reviewFor</th>
        <th scope="col">Requested From</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% reviews.forEach((review, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= review.for.name %></td>
        <td>
            <% review.requiredBy.forEach(requiredBy=>{ %>
                <%= requiredBy.name %>, 
            <% }) %>
        </td>
        <td>
            <a class="btn btn-primary" href="/performanceReviews/<%= review._id %>">Edit</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
<%- include("../partials/footer") %>
